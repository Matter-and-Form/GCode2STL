{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build", // Specifies the build directory
                "--config",
                "Debug", // Or "Release", depending on your preference
                "--target",
                "all" // Or specify your specific target
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Command: cmake --build ${workspaceFolder}/build --config Debug --target all"
        }
    ]
}
