{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/GCode2STL", // Change this to your output executable
            "args": ["/home/drew/data/NGen/50Pieces/GCode/10_Twisted-Vase-Basic.gcode", "/home/drew/Documents/NGEN/GCode to STL/10_Twisted-Vase-Basic.ply"], // Add your arguments here
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
